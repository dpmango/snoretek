@media($desktop)
  .shop
    &__form
      margin-left: auto

@media(width <= 850px)
  .shop
    &__product
      &__tabs-nav
        &__tab
          flex-basis: 31%
          a
            font-size: 14px
    &__form
      width: 360px

@media($tablet)
  .shop
    &__product
      &__tabs-nav
        &__tab
          a
            display: flex
            height: 100%
            justify-content: center
            align-items: center
    &__form
      width: 400px
      margin-top: 30px
      margin-left: auto
      margin-right: auto
    &__logos
      justify-content: center

@media($mobile)
  .shop
    padding-top: 25px
    &__title
      font-size: 24px
      text-align: center
    &__form
      &__title
        font-size: 16px

@media($mobile-s)
  .shop
    &__form
      width: 100%
      padding-left: 20px
      padding-right: 20px



.section-title
  font-size: 36px
  font-family: 'Montserrat'
  text-transform: uppercase
  font-weight: 700
  text-align: center
  margin-bottom: 45px
  position: relative
  &::before
    display: block
    content: ' '
    position: absolute
    left: 50%
    bottom: -20px
    transform: translateX(-50%)
    width: 80px
    height: 6px
    background: $borderColor

@media($tablet)
  .seciton-title
    font-size: 32px

@media($mobile)
  .section-title
    font-size: 28px


// BENEFITS
.features
  background: $lightColor
  margin-top: 80px
  padding-top: 80px
  padding-bottom: 70px
  &__list
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    margin-top: 40px
  &__block
    flex: 0 1 48%
    display: flex
    flex-wrap: wrap
    margin-bottom: 40px
    &__icon
      flex: 0 0 80px
      margin-right: 20px
      size: 80px
      background: white
      border: 2px dashed $colorBlue
      border-radius: 50%
      position: relative
      .ico
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        size: 50px
      .ico-benefit-3
        margin-left: 4px
    &__content
      flex: 1 1 calc(100% - 100px)

  &__title
    font-size: 20px
    font-family: 'Montserrat'
    font-weight: 700
  &__description
    margin-top: 15px
    font-size: 14px
    color: $fontColorMuted
    line-height: 1.5em

  &__image
    img
      max-width: 100%

@media($tablet)
  .features
    background: $lightColor
    margin-top: 60px
    padding-top: 60px
    padding-bottom: 50px

@media($mobile)
  .features
    &__block
      flex-basis: 100%
      align-items: center
    &__list
      margin-top: 20px

    &__title
      max-width: 300px



// How it works
.how-it-works
  margin-top: 80px
  &__text
    margin-top: 30px
    h3
      font-size: 20px
  &__bullets
    list-style: none
    margin: 0
    padding: 0
    margin-top: 30px
    li
      display: block
      position: relative
      font-weight: 700
      font-size: 20px
      margin-bottom: 20px
      &::before
        display: inline-block
        content: ' '
        position: absolute
        top: 0
        left: 0
        background: svg-load('../../images/svg/checkmark.svg', fill=$colorGreen) no-repeat center
        size: 20px
        background-size: contain
      span
        display: inline-block
        padding-left: 40px

@media($tablet)
  .how-it-works
    margin-top: 60px
    &__text
      margin-top: 20px
      h3
        font-size: 18px

@media($mobile)
  .how-it-works
    &__bullets
      li
        font-size: 18px

// TESTIMONAILS
.testimonials
  background: $lightColor
  margin-top: 80px
  padding-top: 70px
  padding-bottom: 70px
  .col--full
    width: 100%
  .owl-carousel
    margin-top: 30px
  &__card
    display: flex
    margin-left: 3%
    margin-right: 3%
    &__image
      flex: 0 0 100px
      size: 100px
      margin-right: 20px
      border-radius: 50%
      position: relative
      overflow: hidden
      img
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        max-width: 100%
        min-height: 100px
    &__content
      flex: 1 1 auto
    &__name
      font-family: 'Montserrat'
      font-weight: 700
      font-size: 20px
      color: $colorBlue
    &__text
      font-size: 14px
      line-height: 1.3em
      margin-top: 20px

@media($tablet)
  .testimonials
    margin-top: 60px
    padding-top: 50px
    padding-bottom: 50px


.owl-next, .owl-prev
  font-size: 0

.owl-nav
  position: absolute
  top: -127px
  right: 0

@media($mobile)
  .owl-nav
    display: none


.owl-prev, .owl-next
  display: inline-block
  content: ' '
  background-image: svg-load('../../images/svg/ico-arrow.svg', fill=$fontColorMuted)
  size: 35px
  cursor: pointer
  &:hover
    background-image: svg-load('../../images/svg/ico-arrow.svg', fill=$colorBlue)
.owl-prev
  margin-right: 10px
  transform: rotate(180deg)

.owl-dots
  display: flex
  align-items: center
  position: absolute
  left: 50%
  transform: translateX(-50%)
  z-index: 3
  bottom: -20px

  .owl-dot
    content: ' '
    background: $borderColor
    size: 8px
    border-radius: 50%
    margin-right: 10px
    transition: all .25s ease-in-out
    &:last-child
      margin-right: 0
    &.active
      size: 14px
      background: $colorBlue


// ABOUT
.about
  margin-top: 80px
  &__text
    margin-top: 20px
    text-align: center
    h3
      font-size: 20px

@media($tablet)
  .about
    margin-top: 50px


// FAQ
.faq
  background: $lightColor
  margin-top: 80px
  padding-top: 70px
  padding-bottom: 80px
  &__wrapper
    display: flex
    align-items: flex-start
    margin-top: 30px

  &__question-box
    border: 2px solid $borderColor
    flex: 0 0 80px
    size: 80px
    font-size: 70px
    line-height: 1
    font-family: 'Montserrat'
    text-align: center
    color: $fontColorMuted

  &__list
    flex: 1 1 auto
    margin-left: 40px

  &__item
    margin-bottom: 20px
    border-radius: 6px
    border: 1px solid $borderColor
    background: white
    &.active
      .faq__item__title
        &::before
          transform: rotate(180deg)
      .faq__item__answer
        display: block
    &__title
      font-family: 'Montserrat'
      font-size: 18px
      font-weight: 700
      position: relative
      cursor: pointer
      padding: 14px 20px 14px 40px
      transition: all .3s ease
      &::before
        display: inline-block
        position: absolute
        top: 40%
        left: 20px
        transform: translateY(-50%)
        content: ' '
        background: svg-load('../../images/svg/triangle.svg', fill=$fontColorMuted) no-repeat center
        size: 10px
        vertical-align: middle
        background-size: contain
        transform: rotate(90deg)
        transition: all .3s ease

      &:hover
        background: color($borderColor a(50%))

    &__answer
      display: none
      border-top: 1px solid $borderColor
      padding: 14px 20px
      p
        margin: 0

  &__help
    margin-left: 40px
    flex: 0 0 200px
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    background: $colorOrange
    border-radius: 6px
    padding: 30px 20px
    text-align: center
    color: white
    &__title
      font-size: 20px
      font-family: 'Montserrat'
      font-weight: 700
      text-transform: uppercase

    &__subtitle
      font-size: 18px
      margin-top: 20px
      margin-bottom: 20px
    &__contacts
      border-top: 1px dotted white
      margin-top: 15px
      padding-top: 10px
      font-size: 14px


@media($tablet)
  .faq
    margin-top: 50px
    padding-top: 50px
    padding-bottom: 40px
    &__wrapper
      flex-direction: column
      margin-top: 20px
    &__question-box
      margin-left: auto
      margin-right: auto
      margin-bottom: 20px
    &__list
      margin-left: 0
    &__help
      margin-top: 20px
      margin-left: auto
      margin-right: auto

@media($mobile)
  .faq
    &__item
      margin-bottom: 10px
      &__title

        font-size: 16px



// CTA
.cta
  background: $colorBlue
  color: white
  padding-top: 50px
  padding-bottom: 50px
  .row
    margin-left: auto
    margin-right: auto
    max-width: 700px

  &__title
    font-size: 28px
    letter-spacing: 1px
    font-family: 'Montserrat'
    font-weight: 700
    margin-bottom: 15px
  &__subtitle
    font-size: 17px

@media($tablet)
  .cta
    &__subtitle
      margin-bottom: 40px

@media($mobile)
  .cta
    text-align: center


// FOOTER
.footer
  background: $lightColor
  padding: 40px 0 30px 0
  &__text
    color: $fontColorMuted
    width: 50%
    margin-bottom: 10px
  &__copywrite
    color: $fontColorMuted
    font-size: 14px
    a
      display: inline-block
      margin-left: 10px
      border-bottom: 1px dashed $colorOrange
      color: $colorOrange
      transition: border .2s ease
      &:hover
        border-color: transparent
  &__socials
    display: flex
    justify-content: flex-end
    a
      flex: 0 0 38px
      display: flex
      justify-content: center
      align-items: center
      background: $borderColor
      size: 38px
      border-radius: 4px
      margin-right: 10px
      &:last-child
        margin-right: 0
      .ico
        transition: all .3s ease

@media($desktop)
  .footer
    &__socials
      margin-top: 20px

@media($mobile)
  .footer
    text-align: center


// MODAL
.modal
  &__title
    margin-bottom: 20px
    font-size: 26px
    font-family: 'Montserrat'
    font-weight: 700
    color: $colorBlue
    &::after
      display: block
      content: ' '
      margin-top: 5px
      width: 30px
      height: 2px
      background: $colorBlue

  .ui-input
    border: 1px solid $borderColor
  .btn
    margin-top: 10px
    text-transform: uppercase
