// HEADER
.header
  background: $colorBlue
  height: 60px
  color: white
  width: 100%
  position: absolute
  top: 0
  left: 0
  z-index: 10
  transform: translate3d(0,0,0)
  transition: transform .3s ease-out
  &--transformed
    transform: translate3d(0,-100%,0)
    .header__menu .btn
      display: inline-block
  &--sticky
    position: fixed
    transform: translate3d(0,0,0)
    box-shadow: 0 2px 6px color(black a(30%))
    .header__menu .btn
      display: inline-block

  .row
    height: 60px
  &__logo
    flex: 0 0 150px
    display: flex
    align-items: center
    img
      max-width: 100%
  &__menu
    flex: 0 1 auto
    margin-left: auto
    font-family: 'Montserrat'
    font-size: 15px
    a
      display: inline-block
      margin-right: 15px
      transition: all .3s ease
      border-bottom: 1px dashed transparent
      &:last-child
        margin-right: 0
      &:hover:not(.btn)
        color: $colorYellow
        border-bottom: 1px dashed $colorYellow
    .btn
      margin-left: 10px
      display: none
  .hamburger
    display: none

@media($tablet)
  .header
    &__menu
      display: none
    .hamburger
      display: block

.mobile-menu
  position: fixed
  left: 0
  top: 0
  background: $colorBlue
  min-height: 100vh
  color: white
  z-index: 9
  width: 300px
  transition: transform .4s ease
  transform: translate3d(-300px, 0,0)
  box-shadow: inset -8px 0 10px 2px color(black a(20%))
  @media(width <= 414px)
    width: 250px
    transform: translate3d(-250px, 0,0)
  &.is-active
    transform: translate3d(0px, 0,0)
  &__menu
    margin-top: 7vh
    a
      display: block
      padding: 14px 35px
      font-size: 16px
      border-bottom: 1px solid color(black a(20%))
      transition: background .3s ease
      &:hover
        background: color(black a(20%))
        color: white
    .ico-logo
      margin-left: 35px
      margin-bottom: 20px
      filter: brightness(100)

// SHOP
.shop
  padding-top: 35px
  &__title
    font-size: 30px
    font-family: 'Montserrat'
    text-transform: uppercase
    font-weight: 700
    text-shadow: 1px 0px 1px #ccc, 0px 1px 1px #eee,
                  2px 1px 1px #ccc, 1px 2px 1px #eee,
                  3px 2px 1px #ccc, 2px 3px 1px #eee
    margin-bottom: 20px

  &__product
    &__subtitle
      margin-bottom: 10px
      text-align: center
    &__tabs-nav
      display: flex
      justify-content: space-between
      border-top: 3px solid $borderColor
      padding-top: 10px
      border-bottom: 3px solid $borderColor
      padding-bottom: 10px
      &__tab
        position: relative
        flex: 0 1 30%
        &::after, &::before
          display: block
          content: ' '
          position: absolute
          left: 0
          width: 100%
          height: 3px
          background: transparent
          transition: all .3s ease
        &::after
          bottom: -13px
        &::before
          top: -13px
        a
          display: block
          position: relative
          overflow: hidden
          padding: 10px 10px
          font-size: 15px
          text-shadow: 1px 1px 3px $fontColor
          background: $lightColor
          border-radius: 8px
          text-align: center
          font-family: 'Montserrat'
          font-weight: 400
          color: white
          transition: all .3s ease
          &::before
            display: block
            content: ' '
            position: absolute 0 0 0 0
            z-index: 2
            background: color(black a(30%))
            transition: all .3s ease
          &:hover
            box-shadow: 0 2px 8px color(black a(20%))
            &::before
              background: color(black a(40%))
        img
          position: absolute
          left: 0
          top: 0
          width: 100%
          z-index: 1
          margin-bottom: 10px
        span
          display: block
          position: relative
          z-index: 3
        &.active
          &::after, &::before
            background: $colorOrange
          a
            background: $colorBlueLight
            &::before
              background: color($colorBlueLight a(50%))

    &__tabs-content
      margin-top: 25px
    &__tab
      display: none
      &.active
        display: block

    &__image
      position: relative
      background: $colorBlue
      padding: 10px
      border-radius: 6px
      display: inline-block
      margin-left: auto
      margin-right: auto
      &::after
        display: block
        content: ' '
        position: absolute 10px 10px 10px 10px
        border-radius: 8px
        z-index: 1
        background: color($colorBlue a(35%)) svg-load('../../images/svg/zoom-in.svg', fill=#fff) no-repeat right bottom
        background-size: 25px
        opacity: 0
        transition: all .3s ease
      &:hover
        &::after
          opacity: 1
          background-position: center

      img
        max-width: 100%
        border-radius: 8px
        display: block

    &__title
      margin-bottom: 20px
      font-size: 26px
      font-family: 'Montserrat'
      font-weight: 700
      color: $colorBlue


  &__form
    position: relative
    background: $colorBlue
    color: white
    border-radius: 6px
    margin-left: auto
    width: 400px
    padding: 25px 30px
    box-shadow: 0 20px 15px -10px color(black a(20%))
    &__title
      font-family: 'Montserrat'
      font-size: 18px
      font-weight: 700
      text-transform: uppercase
      margin-bottom: 15px
      &--right
        text-align: right
      > span
        font-weight: 700
        vertical-align: middle
        color: white
        vertical-align: -5px
      &__product
        text-align: center
        margin-top: 10px
        text-transform: none
        position: relative
        margin-top: 20px
        span
          position: relative
          padding-left: 5px
          padding-right: 5px
          z-index: 2
          display: inline-block
          font-size: 16px
          background: $colorBlue
        &::after
          display: block
          content: ' '
          position: absolute
          top: 50%
          transform: translateY(-50%)
          width: 100%
          height: 5px
          left: 0
          border-top: 1px solid white
          border-bottom: 1px solid white
      &__price
        font-weight: 700
        right: -5px
        top: 20px
        position: absolute
        z-index: 3
        display: inline-block
        width: 120px
        height: 40px
        line-height: 40px
        font-size: 24px
        letter-spacing: -.5px
        margin-left: 15px
        background: $colorGreen
        border-top-right-radius: 3px
        border-bottom-right-radius: 3px
        span
          display: inline-block
          background: $colorGreen
          position: relative
          z-index: 5
          height: 40px
          padding-right: 30px
        &:after
          content: ""
          position: absolute
          z-index: 3
          right: 100%
          bottom: 0
          width: 0
          height: 0
          display: inline-block
          line-height: 0
          border-width: 20px
          border-style: solid
          border-color: $colorGreen $colorGreen $colorGreen transparent
        &:before
          content: ''
          position: absolute
          bottom: 6px
          width: 120px
          left: -35px
          height: 4px
          box-shadow: 0 6px 14px rgba(0, 0, 0, 0.9)
          z-index: -1
          transform: skew(-5deg) rotate(-5deg)


    &__section
      border-top: 1px solid $borderColor
      padding-top: 15px
      margin-bottom: 15px

    &__cta
      text-align: center
      margin-top: 20px

  &__logos
    margin-top: 40px
    display: flex
    align-items: center
    &__image
      margin-right: 20px
      &--fda
        max-width: 110px
      &--90-days
        max-width: 60px
      img
        max-width: 100%

